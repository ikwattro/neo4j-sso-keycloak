{
    "kind": "Database",
    "name": "movies",
    "dropIfExists": true,
    "indexes": {
      "nodes" : [
        {
          "labels": ["Person"],
          "properties": ["name"],
          "name": "idx_movies_person_name",
          "type": "FULLTEXT"
        }
      ]
    },
    "constraints": {
      "nodes": [
        {
          "labels": ["Movie"],
          "properties": ["title"],
          "type": "NODE_KEY",
          "propertyType": "STRING",
          "name": "cst_movie_title_nk"
        }
      ]
    },
    "seeds": ["movies.cypher"]
  }